<%= form_for :record do |f| %>
		<%= f.hidden_field :record_type_id %>
		<%= f.hidden_field :campaign_id %>

		<%= f.fields_for :properties, OpenStruct.new(@record.properties) do |builder| %>
		 	<% @record.record_type.fields.each do |field| %>
		 	<div class="form-row">
		  		<%= render "records/#{field.field_type}", field: field, f: builder %>
		  	</div>
		  	<% end %>
		<% end %>
		<%= f.submit "Запишете"%>
<% end %>