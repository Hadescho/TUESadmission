<table>
	<thead>
		<th>Име</th>
		<th>Описание</th>
		<th>Изтрии</th>
	</thead>
	<% @campaigns.each do |c| %>
		<tr>
			<td><%= c.name %></td>
			<td><%= c.description %></td>
			<td><%= link_to "Изтрии", "campaigns/#{c.id}" , method:"delete" %></td>
		</tr>
	<% end %>
</table>

<%= form_tag new_campaign_record_path, method: :get do %>
	<%= select_tag :record_type_id, 
			options_from_collection_for_select(RecordType.all, :id, :name) %>
	<%= submit_tag "Нов запис", name: nil %>
<% end %>