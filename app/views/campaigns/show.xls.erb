<html>
<head>
	<title>@campaign.name</title>
	<meta http-equiv='Content-Type' content='text/html; charset=utf-8'>
</head>
<body>
	<table>
		<thead>
			<td>Record ID</td>
			<% @campaign.records.first.properties.each_key do |propertie|%>
			<td><%= propertie %></td>
			<% end %>
		</thead>
		<tbody>
			<% @campaign.records.each do |record| %>
			<tr>
				<td><%= record.id %> </td>
				<% record.properties.each_value do |value| %>
				<td><%= value %></td>
				<% end %>
			</tr>
			<% end %>
		</tbody>
	</table>
</body>
</html>
