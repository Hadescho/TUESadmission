<div class="centered-box">
	<h2>Вход</h2>

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div class="form-row"><%= f.label :email, "E-mail адрес" %><br />
	  <%= f.email_field :email, :autofocus => true %></div>

	  <div class="form-row"><%= f.label :password, "Парола" %><br />
	  <%= f.password_field :password %></div>

	  <% if devise_mapping.rememberable? -%>
	    <div class="form-row"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  <% end -%>

	  <div class="form-row"><%= f.submit "Вход", class: "btn btn-large btn-primary" %></div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>
